			"-cp", "src",
			"-cp", "browser/src",
			"-cp", "common/src",
			"-cp", "persistence/src",
			"-cp", "server/src",
			"--interp",
			"--main", "dmcblue.gambit.server.Test"
		]
	},

	{
		"name": "run:terminal",
		"description": "Runs the terminal game",
		"groups": [{
			"name": "run",
			"rank": 0
		}],
		"command": "haxe",
		"arguments": [
			"-lib", "haxe-crypto",
			"-cp", "src",
			"-cp", "browser/src",
			"-cp", "common/src",
			"-cp", "server/src",
			"--interp",
			"--main", "dmcblue.gambit.terminal.Main"
		]
	},

	{
		"name": "run:main",
		"description": "Runs",
		"groups": [{
			"name": "run",
			"rank": 0
		}],
		"command": "haxe",
		"arguments": [
			"-lib", "dotenv.hx",
			"-cp", "src",
			"-cp", "browser/src",
			"-cp", "common/src",
			"-cp", "server/src",
			"--interp",
			"--main", "dmcblue.gambit.Main"
		]
	},{
		"name": "build:main",
		"description": "Build",
		"groups": [],
		"command": "haxe",
		"arguments": [
