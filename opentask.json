{
	"version": "0.1.0",
	
	"requirements": [{
		"name": "git",
		"command": "git"
	},{
		"name": "haxe",
		"command": "haxe",
		"testArgument": "-version"
	},{
		"name": "copy",
		"command": "cp",
		"testArgument": "-version",
		"windows": {
			"command": "copy",
			"testArgument": "/?"
		}
	}],
		
	"tasks": [{
		"name": "init:git",
		"description": "Initializes git submodules",
		"groups": [{
			"name": "init",
			"rank": 1
		}],
		"command": "git",
		"arguments": ["submodule","init"]
	},{
		"name": "init:code",
		"description": "Fetches git submodule dependencies",
		"groups": [{
			"name": "init",
			"rank": 2
		}],
		"command": "git",
		"arguments": ["submodule","update"]
	},{
		"name": "init:utest",
		"description": "Installs haxe-utest",
		"groups": [{
			"name": "init",
			"rank": 4
		}],
		"command": "haxelib",
		"arguments": ["install", "utest"]
	},{
		"name": "init:haxe",
		"description": "Installs haxe dependencies",
		"groups": [{
			"name": "init",
			"rank": 2
		}],
		"command": "opentask",
		"arguments": ["rungroup", "init:haxe"]
	},{
		"name": "init:haxe:cpp",
		"description": "Installs haxelib dependencies",
		"groups": [{
			"name": "init:haxe",
			"rank": 3
		}],
		"command": "haxelib",
		"arguments": [
			"install",
			"hxcpp"
		],
		"windows": {
			"arguments": [
				"install",
				"hxcpp;",
				"haxelib",
				"install",
				"minimingw"
			]
		}
	},{
		"name": "init:haxe:crypto",
		"description": "Installs haxe-crypto",
		"groups": [{
			"name": "init:haxe",
			"rank": 1
		}],
		"command": "haxelib",
		"arguments": ["install", "haxe-crypto"]
	},{
		"name": "init:haxe:dotenv",
		"description": "Installs haxe dotenv",
		"groups": [{
			"name": "init:haxe",
			"rank": 2
		}],
		"command": "haxelib",
		"arguments": ["install", "dotenv"]
	},

	{
		"name": "test:gambit",
		"description": "Runs all tests for the gambit library",
		"groups": [{
			"name": "test",
			"rank": 0
		}],
		"command": "haxe",
		"arguments": [
			"-lib", "utest",
			"-cp", "src",
			"-cp", "common/src",
			"--interp",
			"--main", "dmcblue.gambit.Test"
		]
	},
	{
		"name": "test:server",
		"description": "Runs all tests for the gambit:server library",
		"groups": [{
			"name": "test",
			"rank": 0
		}],
		"command": "haxe",
		"arguments": [
			"-lib", "utest",
			"-lib", "haxe-crypto",
			"-lib", "dotenv",
			"-cp", "src",
			"-cp", "common/src",
			"-cp", "persistence/src",
			"-cp", "server/src",
			"--interp",
			"--main", "dmcblue.gambit.server.Test"
		]
	},

	{
		"name": "run:terminal",
		"description": "Runs the terminal game",
		"groups": [{
			"name": "run",
			"rank": 0
		}],
		"command": "haxe",
		"arguments": [
			"-cp", "src",
			"-cp", "common/src",
			"--interp",
			"--main", "dmcblue.gambit.terminal.Main"
		]
	},

	{
		"name": "build:cpp",
		"description": "Transpiles Haxe to C++",
		"groups": [{
			"name": "build",
			"rank": 1
		}],
		"command": "haxe",
		"arguments": [
			"-cp", "src",
			"-cp", "common/src",
			"--cpp", "bin/cpp",
			"-main", "dmcblue.gambit.terminal.Main"
		]
	},{
		"name": "build:copy",
		"description": "Copies the executable into the /bin root and renames",
		"groups": [{
			"name": "build",
			"rank": 2
		}],
		"command": "cp",
		"arguments": ["bin/cpp/Main", "bin/gambit"],
		"platformSpecifics": {
			"windows": {
				"arguments": ["bin\\cpp\\Main.exe",  "/B", "bin\\gambit.exe",  "/B"]
			}
		}
	},
	
	
	{
		"name": "build:haxe",
		"description": "Transpiles Haxe to PHP",
		"groups": [{
			"name": "build:server",
			"rank": 1
		}],
		"command": "haxe",
		"arguments": [
			"-lib", "haxe-crypto",
			"-lib", "dotenv",
			"-cp", "src",
			"-cp", "common/src",
			"-cp", "persistence/src",
			"-cp", "server/src",
			"-D", "php-prefix=EB",
			"-php", "bin",
			"-main", "dmcblue.gambit.server.Main"
		]
	}]
}
